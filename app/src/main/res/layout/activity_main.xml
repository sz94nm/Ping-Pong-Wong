<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#ffffff"
        android:tint="#FFFFFF"
>


    <ImageView
            android:layout_width="166dp"
            android:layout_height="140dp"
            android:background="@drawable/animation"
            android:id="@+id/logo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/titlelabel"/>
    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/setnumberlabel" android:id="@+id/setsRG">
        <RadioButton
                android:text="1 set to rule them ALL!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="201dp"
                tools:layout_editor_absoluteX="191dp" android:id="@+id/onesetRB"/>
        <RadioButton
                android:text="2 out of 3 wins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="240dp"
                tools:layout_editor_absoluteX="191dp" android:id="@+id/threesetsRB"/>
        <RadioButton
                android:text="3 out of 5 wins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="157dp"
                tools:layout_editor_absoluteX="191dp" android:id="@+id/fivesetsRB"/>
    </RadioGroup>
    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/pointsnumberlabel" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:id="@+id/pointsRG">
        <RadioButton
                android:text="11 points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="369dp"
                tools:layout_editor_absoluteX="77dp" android:id="@+id/tenpointsRB"/>
        <RadioButton
                android:text="21 points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="413dp"
                tools:layout_editor_absoluteX="75dp" android:id="@+id/twentypointsRB"/>
    </RadioGroup>
    <TextView
            android:text="Choose Sets Number"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setnumberlabel" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/logo" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="Choose Points Number"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pointsnumberlabel" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/setsRG" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="START"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/startBTN" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/pointsRG" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
    />
    <TextView
            android:text="Ping Pong Wong"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:fontFamily="monospace"
            android:layout_height="wrap_content"
            android:id="@+id/titlelabel" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="49dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Continue"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/continueBTN" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/pointsRG"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>