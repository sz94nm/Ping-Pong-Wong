<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        tools:context=".Main2Activity">


    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#222222"
            app:layout_constraintEnd_toStartOf="@+id/leftLayout"
            android:id="@+id/rightlayout" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
    >
        <TextView
                android:text="0"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="140sp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:id="@+id/leftscoretext"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.526" android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView

                android:text="0"
                android:gravity="top"
                android:foregroundGravity="top"
                android:textColor="#98b0fd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/leftsettext"
                app:layout_constraintTop_toBottomOf="@+id/leftscoretext"
                android:textSize="70sp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp" app:srcCompat="@drawable/blue"
                android:id="@+id/leftplayerimage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/leftsettext"/>
        <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp" app:srcCompat="@drawable/ic_add_circle_outline_black_24dp"
                android:id="@+id/leftpointBTN" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/leftplayerimage" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" tools:ignore="VectorDrawableCompat"/>
        <ImageView
                android:layout_width="60dp"
                android:scaleX="-1"
                android:layout_height="60dp"
                android:background="@drawable/animation"
                android:id="@+id/leftserve"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/leftplayerimage" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintTop_toTopOf="@+id/leftplayerimage"
                app:layout_constraintStart_toEndOf="@+id/leftplayerimage" tools:ignore="DuplicateIds"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
            android:background="#444444"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toEndOf="@+id/rightlayout"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/leftLayout" tools:ignore="DuplicateIds"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp" app:srcCompat="@drawable/ic_add_circle_outline_black_24dp"
                android:id="@+id/rightpointsBTN"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/rightplayerimage" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" tools:ignore="VectorDrawableCompat"
                app:layout_constraintVertical_bias="0.51"/>
        <TextView
                android:text="0"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="140sp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:id="@+id/rightscoretext"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.526" android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView

                android:text="0"
                android:textColor="#fd9898"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rightsetstext"
                android:textSize="70sp"
                app:layout_constraintTop_toBottomOf="@+id/rightscoretext"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp" app:srcCompat="@drawable/red"
                android:id="@+id/rightplayerimage"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintTop_toBottomOf="@+id/rightsetstext"/>
        <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/animation"
                android:id="@+id/rightserve"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/rightplayerimage"
                android:layout_marginEnd="8dp" app:layout_constraintTop_toTopOf="@+id/rightplayerimage"
                app:layout_constraintBottom_toBottomOf="@+id/rightplayerimage"/>
        <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp" app:srcCompat="@drawable/ic_home_black_24dp"
                android:id="@+id/homeBTN" android:layout_marginBottom="22dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp" tools:ignore="VectorDrawableCompat"/>
        <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp" app:srcCompat="@drawable/ic_refresh_black_24dp"
                android:id="@+id/resetBTN"
                app:layout_constraintEnd_toStartOf="@+id/homeBTN"
                android:layout_marginEnd="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/homeBTN"
                app:layout_constraintTop_toTopOf="@+id/homeBTN" tools:ignore="VectorDrawableCompat"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>